<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.employee_details.LeaveStatus">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/StatusID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/piink"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="Leave Status"
                    android:textColor="#DB3694"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/status_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#4F2885"
                    android:textColorHighlight="#000"
                    android:textColorHint="#595151"
                    android:textSize="30dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/StatusID"
                    android:background="@drawable/shape"
                   android:layout_margin="30dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Cancel Leave" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
