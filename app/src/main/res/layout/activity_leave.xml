<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leave"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context="com.example.dell.employee_details.LeaveDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/shape"
            android:backgroundTint="#e28ca4"
            android:clickable="true"
            android:elevation="0dp"
            android:onClick="ApplyLeave"
            android:padding="10dp"
            android:text="Apply Leave" />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:backgroundTint="#e28ca4"
            android:clickable="true"
            android:onClick="Summary"
            android:text="Leave Summary" />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:backgroundTint="#e28ca4"
            android:clickable="true"
            android:onClick="Cancel"
            android:text="Leave Cancel " />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:backgroundTint="#e28ca4"
            android:clickable="true"
            android:onClick="history"
            android:text="Leave History" />


    </LinearLayout>


</RelativeLayout>
